<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <style>
        body {
          background-color: #9C835F;
          color: white;
        }
        .playing-btn {
          font-size: 2rem;
          width: 100%;
          margin-top: 2rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col text-center">
                <% if (sex == 'Male') { %>
                    <img src="../male.png" alt="Profile Picture" class="img-thumbnail rounded-circle" width="150">
                <% } %>
                <% if (sex == 'Female') { %>
                    <img src="../female.png" alt="Profile Picture" class="img-thumbnail rounded-circle" width="150">
                <% } %>
                <br><br>
                <h1 class="display-6"><%= username %></h1>
                <h3>Scores <%= scores %></h3>
                <br>
                <p class="lead">Birthday: <%= birthday %></p>
                <p class="lead">Hobby: <%= hobby %></p>
                <form method="POST" action="/profile?_method=DELETE" class="d-grid gap-2 col-sm-6 mx-auto">
                    <input type="hidden" name="username" value="<%= username %>">
                    <button type="submit" class="btn btn-lg btn-danger" type="button" onclick="return confirm('Are you sure?')">Delete Profile</button>
                </form>
                <form method="POST" action="/profile/edit" class="d-grid gap-2 col-sm-6 mx-auto">
                    <input type="hidden" name="username" value="<%= username %>">
                    <button type="submit" class="btn btn-lg btn-primary" type="button">Edit Profile</button>
                </form>
                <form method="POST" action="/game">
                    <input type="hidden" name="scores" value="<%= scores %>">
                    <button type="submit" class="btn btn-lg playing-btn" style="background-color: #FFB548; color: white;">Play</button>
                </form>  
                <form method="POST" action="/index">
                    <button type="submit" class="btn btn-lg playing-btn btn-danger">Quit Game</button>
                </form> 
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>