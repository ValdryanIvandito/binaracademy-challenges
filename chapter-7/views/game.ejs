<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= title %></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <!-- Style CSS -->
    <style>
        * {
            margin: 0;
            padding: 0;
            /* box-sizing: inherit; */
        }

        body {
            background-color: #9C835F;
            /* width: 100vh;
            height: 100vh; */
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .tBack {
            font-family: 'Open Sans', sans-serif; 
            font-size: 72px; 
            font-weight: bold; 
            color:#724C21;
            text-decoration: none;
            padding-left: 25px;
        }

        .tBack:hover {
            font-family: 'Open Sans', sans-serif; 
            font-size: 72px; 
            font-weight: bold; 
            color: #C4C4C4;
            text-decoration: none;
            padding-left: 25px;
        }

        .tTitle {
            font-family: 'Open Sans', sans-serif; 
            font-size: 36px; 
            font-weight: bold; 
            color:#F9B23D;
        }

        .tPlayer1 {
            font-family: 'Open Sans', sans-serif; 
            font-size: 36px; 
            font-weight: bold; 
            color: black;
            /* text-align: center; */
        }

        .tCOM {
            font-family: 'Open Sans', sans-serif; 
            font-size: 36px; 
            font-weight: bold; 
            color: black;
            /* text-align: center;  */
        }

        .tScores {
            font-family: 'Open Sans', sans-serif; 
            font-size: 36px; 
            font-weight: bold; 
            color: black;
            /* text-align: center;  */
        }

        .tScoresResult {
            font-family: 'Open Sans', sans-serif; 
            font-size: 36px; 
            font-weight: bold; 
            color: black;
            /* text-align: center;  */
        }

        .tSigns {
            font-family: 'Open Sans', sans-serif; 
            font-size: 144px; 
            font-weight: bold; 
            color: #BD0000;
            /* text-align: center;  */
        }

        .tSignsWin {
            font-family: 'Open Sans', sans-serif; 
            font-size: 38px; 
            font-weight: bold; 
            color: white;
            text-align: center; 
            background-color:#4C9654;
            width: 270px;
            height: 167px;
            justify-content: center;
            align-items: center;
            display: flex;
            transform: rotate(-29deg);
        }

        .tSignsDraw {
            font-family: 'Open Sans', sans-serif; 
            font-size: 38px; 
            font-weight: bold; 
            color: white;
            text-align: center; 
            background-color: #035B0C;
            width: 270px;
            height: 167px;
            justify-content: center;
            align-items: center;
            display: flex;
            transform: rotate(-29deg);
        }

        .bRefresh:hover {
            background-color: #C4C4C4;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bRefresh {
            background-color: transparent;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Rock:hover {
            background-color: #C4C4C4;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Rock {
            background-color: transparent;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Paper:hover {
            background-color: #C4C4C4;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Paper {
            background-color: transparent;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Scissors:hover {
            background-color: #C4C4C4;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .bP1Scissors {
            background-color: transparent;
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .iPCRock {
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .iPCPaper {
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .iPCScissors {
            padding: 10px 20px;
            border: none;
            border-radius: 20%;
        }

        .hidden {
            background-color: #C4C4C4;
        }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="container-fluid">
        <div class="row align-items-center" style="height: 120px;">
            <!-- Back to Main Page Link -->
            <div class="col-1">
                <form method="GET" action="/profile">
                    <button type="submit" class="tBack" style="background-color: transparent; border: none;">
                        <
                    </button>
                </form> 
            </div>

            <!-- Logo -->
            <div class="col-1">
                <img src="/images/logo.png" style="width: 72px; height: 72px;">
            </div>

            <!-- Game's Title -->
            <div class="col-8">
                <p class="tTitle">ROCK PAPER SCISSORS</p>
            </div>
        </div>
    </div>

    <div class="container" style="display: flex; align-items: center; justify-content: center; height: 100%;">
        <p class="tScores">SCORES <%= newScores %></p>
    </div>

    <% if (result === 'PLAYER1 WIN!' && playerOne === 'scissors' && playerCom === 'paper') { %>
        <%- include('layouts/p1-sp') %>
    <% } else if (result === 'PLAYER1 WIN!' && playerOne === 'paper' && playerCom === 'rock') { %>
        <%- include('layouts/p1-pr') %>
    <% } else if (result === 'PLAYER1 WIN!' && playerOne === 'rock' && playerCom === 'scissors') { %>
        <%- include('layouts/p1-rs') %>
    <% } else if (result == 'COM WIN!' && playerCom === 'scissors' && playerOne === 'paper') { %>
        <%- include('layouts/pc-sp') %>
    <% } else if (result == 'COM WIN!' && playerCom === 'paper' && playerOne === 'rock') { %>
        <%- include('layouts/pc-pr') %>
    <% } else if (result == 'COM WIN!' && playerCom === 'rock' && playerOne === 'scissors') { %>
        <%- include('layouts/pc-rs') %>
    <% } else if (result == 'DRAW!' && playerCom === 'scissors' && playerOne === 'scissors') { %>
        <%- include('layouts/drw-ss') %>
    <% } else if (result == 'DRAW!' && playerCom === 'paper' && playerOne === 'paper') { %>
        <%- include('layouts/drw-pp') %>
    <% } else if (result == 'DRAW!' && playerCom === 'rock' && playerOne === 'rock') { %>
        <%- include('layouts/drw-rr') %>
    <% } else { %>
        <%- include('layouts/content') %>
    <% } %>

    <!-- Refresh -->
        <div class="row align-items-center" style="height: 100px;">
            <div class="container">
                <form method="post" action="/game-vscom">
                    <input type="hidden" name="username" value="<%= username %>">
                    <button class="bRefresh" type="submit">
                        <img src="/images/refresh.png" style="width: 77px; height: 71px;">
                    </button>
                </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    </body>
</html>
